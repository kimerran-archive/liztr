<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Liztr</title>
   <link rel="stylesheet" type="text/css" href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" />
    @*<link rel="stylesheet" type="text/css" href="~/assets/css/topcoat-desktop-dark.css" />*@
    <link href="http://fonts.googleapis.com/css?family=Orbitron" rel="stylesheet" type="text/css">
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    <script src="~/scripts/3p/angular/angular.js"></script>
    <script src="~/scripts/3p/angular/angular-resource.js"></script>
    <script src="~/scripts/3p/angular/angular-route.js"></script>

</head>
<body ng-app="LiztrApp" ng-cloak class="container">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span style="font-family: 'Orbitron', sans-serif;">
                    @Html.ActionLink("Liztr", "Index", "Home", null, new { @class = "navbar-brand" })


                </span>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-1">
                <ul class="nav navbar-nav">
                    <li><a href="#/events/new">Create</a></li>
                    <li><a href="#/events/all">My Events</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>